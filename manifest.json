{
  "manifest_version": 3,
  "name": "YouTube Full-Window Theater",
  "version": "1.0",
  "description": "Expands YouTube Theater Mode to fill the entire window (Twitch/Kick style).",
  "icons": {
    "48": "assets/icons/icon-48.png",
    "96": "assets/icons/icon-96.png",
    "128": "assets/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["src/immersive-layout.css"],
      "js": ["src/activity-monitor.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
